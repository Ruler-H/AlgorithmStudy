    "# 백준 25600번 - Triathlon\n",
    "import sys\n",
    "# input = sys.stdin.readline\n",
    "\n",
    "N = int(input())\n",
    "\n",
    "result = 0\n",
    "for i in range(N):\n",
    "    a, d, g = map(int, input().split())\n",
    "    score = a * (d + g)\n",
    "    if a == d + g:\n",
    "        score *= 2\n",
    "    result = max(result, score)\n",
    "\n",
    "print(result)"
   ]
