    "# 백준 15881번 - Pen Pineapple Apple Pen\n",
    "import sys\n",
    "# input = sys.stdin.readline\n",
    "\n",
    "n = int(input())\n",
    "inp_str = input()\n",
    "\n",
    "cnt = 0\n",
    "target = \"pPAp\"\n",
    "i = 0\n",
    "\n",
    "while i < len(inp_str):\n",
    "    if inp_str[i:i+4] == target:\n",
    "        cnt += 1\n",
    "        i += 4\n",
    "    else:\n",
    "        i += 1\n",
    "\n",
    "print(cnt)"
